@model FurnitureWebsite.Models.ProductsViewModel
    <section class="search">
            <form asp-controller="Products" asp-action="Products" method="get">
                @Html.TextBox("searchText")
                <button type="submit" class="turbuton">Търси</button>
            </form>
    </section>
    <section class="product" id="product">
        @foreach (var Category in Model.Categories)
        {
            <br />
            <div class="main-txt">
                <h3>@Category.Name</h3>
            </div>
            <div class="card-content">
                @foreach (var item in Category.Items)
                {
                    <div class="row">
                        <a href="@this.Url.Action("SingleProduct", "SingleProduct", new { item.ID })">
                            <img src="data:image/*;base64,@(Convert.ToBase64String(item.Picture))">
                        </a>
                        <a href="@this.Url.Action("SingleProduct", "SingleProduct", new { item.ID })">
                            <div class="card-body">
                                <h3>@item.CategoryName "@item.Name"</h3>
                                @if (item.Discount <= 0)
                                {
                                    <h5><br>@item.Price.ToString("#.##.##") лв.</h5>
                                }
                                else
                                {
                                    <div class="heading-container">
                                       <h5 class="s-s">@item.Price.ToString("#.##.##")</h5>
                                       <h5>@Math.Round(item.Price - (item.Price * (item.Discount / 100)), 2) лв.</h5>
                                    </div>}
                            </div>
                        </a>
                    </div>
                }
            </div>
        }
    </section>
